{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
